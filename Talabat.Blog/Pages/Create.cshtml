@page
@model Talabat.Blog.Pages.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="col-lg-7 col-md-12">
    <form action="/" method="post">
        <div class="form-group">
            <label asp-for="Article.Title"> </label>
            <input  class="form-control"   type="text" asp-for="Article.Title" />
        </div>
        <div class="form-group">
            <label asp-for="Article.Content"> </label>
            <textarea class="form-control" asp-for="Article.Content" rows="3"></textarea>
        </div>
        <div class="row pr-3">
            <button class="btn btn-secondary ml-auto mr-2">Cancel</button>

            <button class="btn btn-primary">Create</button>
        </div>
    </form>
</div>